<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="penjiboy.familytree.MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Main Menu"
            android:ems="10"
            android:id="@+id/mainMenuHeaderText"
            android:textAlignment="center"
            android:contentDescription="The main menu header text"
            android:fontFamily="Serif"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#e00000"/>

    <Button
            android:text="View Tree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewTreeButton"
            tools:layout_editor_absoluteY="92dp"
            tools:layout_editor_absoluteX="29dp"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:textSize="30dp"
            android:background="@android:color/holo_green_light"
            android:textColor="#000000"/>

</android.support.constraint.ConstraintLayout>
