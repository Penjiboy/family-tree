<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="penjiboy.familytree.MainActivity">

    <ImageView
            android:layout_width="470dp"
            android:layout_height="454dp" app:srcCompat="@drawable/tree" android:id="@+id/imageView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mainMenuHeaderText"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Know Your Roots!"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:text="Load Existing Trees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadExistingTreesButton"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:textSize="30sp"
            android:textAllCaps="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/newTreeButton" app:layout_constraintVertical_bias="0.060000002"
            style="@style/Widget.AppCompat.Button"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mainMenuHeaderText" android:text="Main Menu"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" android:textSize="30sp"
            android:textStyle="bold" android:textColor="@android:color/holo_red_dark"/>

    <Button
            android:text="New Tree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newTreeButton"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:textSize="30sp"
            android:textAllCaps="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/currentTreeButton"
            app:layout_constraintVertical_bias="0.050000012" style="@style/Widget.AppCompat.Button"/>

    <Button
            android:text="Current Tree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentTreeButton"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mainMenuHeaderText"
            app:layout_constraintVertical_bias="0.26" android:elevation="0dp" style="@style/Widget.AppCompat.Button"
            android:textSize="30sp" android:textAllCaps="false" android:textAlignment="textStart"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="55dp"
            android:orientation="horizontal"/>

</android.support.constraint.ConstraintLayout>
